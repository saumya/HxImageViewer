<?xml version="1.0" encoding="utf-8"?>
<project>
	
	<meta title="ImageShow" package="com.saumya.baseUI" version="1.0.0" company="Saumya Inc" />
	<app main="com.saumya.core.ui.Main" path="Export" file="Main" />
	
